---
export interface Props {
    children: JSX.Element | JSX.Element[] | String;
    className: String
}

const {className} = Astro.props;
---

<div class={`relative border-2 border-blue-400 ${className}`}>
    <slot />
	<div class={`absolute w-2 lg:w-3 h-2 lg:h-3 bg-white border-2 border-blue-600 -top-1 lg:-top-2 -left-1 lg:-left-2`}></div>
	<div class={`absolute w-2 lg:w-3 h-2 lg:h-3 bg-white border-2 border-blue-600  -top-1 lg:-top-2 -right-1 lg:-right-2`}></div>
	<div class={`absolute w-2 lg:w-3 h-2 lg:h-3 bg-white border-2 border-blue-600  -bottom-1 lg:-bottom-2 -left-1 lg:-left-2`}></div>
	<div class={`absolute w-2 lg:w-3 h-2 lg:h-3 bg-white border-2 border-blue-600  -bottom-1 lg:-bottom-2 -right-1 lg:-right-2`}></div>
</div>
