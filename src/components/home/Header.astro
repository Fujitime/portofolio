---
const links = [
	{ href: "/about", text: "About" },
	{ href: "/blog", text: "Blog" },
	{ href: "/contact", text: "Contact" },
];
---

<header class="py-8 px-4 flex items-center justify-between max-w-7xl mx-auto">
	<div>
		<a href="/">
			<div class="flex">
				<div class="duration-500 bg-transparent border-transparent border-20 box-border border-t-lime-500 border-l-lime-500 border-r-lime-400 h-0 hover:(border-t-lime-500 border-l-lime-400 border-r-lime-500)"></div>
			</div>
		</a>
	</div>
	<nav class="font-medium flex items-center gap-12">
		{
			links.map(({ href, text }) => (
				<a href={href}>
					<span>{text}</span>
				</a>
			))
		}
	</nav>
</header>
